{
    "extends": "recommended",
    "rules": {
        "CompileStatic": {
            "enabled": false
        },
        "UnnecessaryGetter": {
            "enabled": true,
            "ignoreMethodNames": "getAllChildApps, getChildDevices"
        },
        "formatting.Indentation": {
            "spacesPerIndentLevel": 2,
            "severity": "info"
        }
    }
}