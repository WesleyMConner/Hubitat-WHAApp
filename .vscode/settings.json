// cSpell:words
{
  "[asciidoc]": {
    "editor.rulers": [
      {
        "column": 75,
        "color": "#CCCCCC"
      },
      {
        "column": 85,
        "color": "#ff2222"
      }
    ],
    "editor.defaultFormatter": "asciidoctor.asciidoctor-vscode"
  },
  "[groovy]": {
    "editor.rulers": [
      {
        "column": 75,
        "color": "#CCCCCC"
      },
      {
        "column": 85,
        "color": "#ff2222"
      }
    ],
    "editor.defaultFormatter": "NicolasVuillamy.vscode-groovy-lint"
  },
  "[typescript]": {
    "editor.rulers": [
      {
        "column": 85,
        "color": "#CCCCCC"
      },
      {
        "column": 100,
        "color": "#ff2222"
      }
    ],
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "asciidoc.extensions.enableKroki": true,
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code",
  "editor.rulers": [
    // DEFAULT
    {
      "column": 80,
      "color": "#cccccc"
    }
  ],
  "hubitat.hub.hostname": "192.168.8.94",
  "hubitat.misc.overwriteHubitatVersion": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "shellcheck.executablePath": "../../node_modules/shellcheck/shellcheck-stable/shellcheck",
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 8000,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.decorations.badges": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "default",
  "workbench.editor.showIcons": false,
  "workbench.editor.wrapTabs": true
}